<%= form_with(model: [@group, @payment], url: user_group_payments_path(@group.user, @group), local: true, multipart: true) do |form| %>

  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success", style: "margin-top: 40vh;" %>
  </div>
  
<% end %>
